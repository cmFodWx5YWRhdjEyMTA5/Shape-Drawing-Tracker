<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/primaryLightColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

    <ImageView android:id="@+id/shape_image_view"
               android:layout_width="272dp"
               android:layout_height="272dp"
               android:src="@drawable/circle_shape"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintVertical_bias="0.223"
               tools:ignore="ContentDescription"/>

    <TextView android:id="@+id/shape_text_view"
              android:text="Circle"
              android:textSize="26sp"
              android:textStyle="bold"
              android:textAllCaps="true"
              android:fontFamily="@font/opensans_light"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/shape_image_view"
              app:layout_constraintStart_toStartOf="@id/shape_image_view"
              app:layout_constraintEnd_toEndOf="@id/shape_image_view"
              android:layout_marginTop="32dp"/>

    <Button android:id="@+id/randomize_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_regular"
            android:background="@color/secondaryColor"
            android:text="@string/randomize_button"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="48dp"/>

</android.support.constraint.ConstraintLayout>






